<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="se233.audioconverter.ConverterController"
      alignment="TOP_CENTER" prefHeight="550.0" prefWidth="850.0" spacing="15.0"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <fx:define>
        <ToggleGroup fx:id="modeToggleGroup" />
    </fx:define>

    <HBox alignment="CENTER" spacing="0" styleClass="mode-selector">
        <ToggleButton fx:id="converterModeButton" text="Audio Converter" selected="true"
                      toggleGroup="$modeToggleGroup" styleClass="left-pill"/>
        <ToggleButton fx:id="youtubeModeButton" text="YouTube Downloader"
                      toggleGroup="$modeToggleGroup" styleClass="right-pill"/>
    </HBox>

    <StackPane fx:id="mainStackPane" VBox.vgrow="ALWAYS">

        <VBox fx:id="converterPane" alignment="TOP_CENTER" spacing="15.0">
            <Label id="title-label" text="Default Settings for New Files"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Format:"/>
                <ComboBox fx:id="defaultFormatComboBox" prefWidth="120.0"/>
                <Label text="Bitrate:"/>
                <ComboBox fx:id="defaultBitrateComboBox" prefWidth="150.0"/>
                <Label text="Sample Rate:"/>
                <ComboBox fx:id="defaultSampleRateComboBox" prefWidth="120.0"/>
                <Label text="Channels:"/>
                <ComboBox fx:id="defaultChannelsComboBox" prefWidth="100.0"/>
            </HBox>

            <ListView fx:id="fileListView" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="Drag and Drop Audio Files Here"/>
                </placeholder>
            </ListView>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="addFilesButton" onAction="#handleAddFilesAction" text="Add Files..." styleClass="secondary-button"/>
                <Button fx:id="clearAllButton" onAction="#handleClearAllAction" text="Clear All" styleClass="secondary-button"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="convertButton" onAction="#handleConvertButtonAction" text="Convert All Files" prefHeight="40.0"/>
            </HBox>
        </VBox>

        <VBox fx:id="youtubePane" alignment="CENTER" spacing="20" visible="false">
            <Label id="title-label" text="YouTube to MP3 Downloader" style="-fx-font-size: 24px;"/>
            <HBox alignment="CENTER" spacing="10" maxWidth="600">
                <Label text="YouTube URL:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="youtubeUrlField" HBox.hgrow="ALWAYS" promptText="input like https://youtu.be/dQw4w9WgXcQ"/>
            </HBox>
            <Button fx:id="youtubeDownloadButton" text="Download MP3" onAction="#handleYoutubeDownloadAction" />
        </VBox>

    </StackPane>
</VBox>