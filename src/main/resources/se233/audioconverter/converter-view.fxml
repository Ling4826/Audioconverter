<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox fx:controller="se233.audioconverter.ConverterController"
      alignment="TOP_CENTER" prefHeight="550.0" prefWidth="850.0" spacing="15.0"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label id="title-label" text="Default Settings for New Files"/>

    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Format:"/>
        <ComboBox fx:id="defaultFormatComboBox" prefWidth="120.0"/>
        <Label text="Bitrate:"/>
        <ComboBox fx:id="defaultBitrateComboBox" prefWidth="150.0"/>
        <Label text="Sample Rate:"/>
        <ComboBox fx:id="defaultSampleRateComboBox" prefWidth="120.0"/>
        <Label text="Channels:"/>
        <ComboBox fx:id="defaultChannelsComboBox" prefWidth="100.0"/>
    </HBox>

    <ListView fx:id="fileListView" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="Drag and Drop Audio Files Here"/>
        </placeholder>
    </ListView>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Button fx:id="addFilesButton" onAction="#handleAddFilesAction" text="Add Files..." styleClass="secondary-button"/>
            <Button fx:id="clearAllButton" onAction="#handleClearAllAction" text="Clear All" styleClass="secondary-button"/>
            <Region HBox.hgrow="ALWAYS" /> <Button fx:id="convertButton" onAction="#handleConvertButtonAction" text="Convert All Files" prefHeight="40.0"/>
        </children>
    </HBox>

</VBox>